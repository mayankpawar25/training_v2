{
    "view": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [{
                "id": "Title",
                "type": "TextBlock",
                "text": "${action.displayName}",
                "size": "large",
                "maxLines": 3,
                "wrap": true,
                "weight": "bolder",
                "spacing": "small"
            },
            {
                "id": "Expiry",
                "type": "TextBlock",
                "text": "${if(equals(action.status, 'Active'), formatString(strings.due_by_date, ('' + dateString(action.expiryTime, 'SHORT') + ' ' + timeString(action.expiryTime))),strings.training_expired)}",
                "color": "${if(equals(action.status, 'Active'), 'default','attention')}",
                "size": "small",
                "wrap": true
            },
            {
                "id": "Sender",
                "type": "TextBlock",
                "text": "${creator[0].displayName} sent a Training",
                "size": "small",
                "wrap": true
            },
            {
                "id": "ResultVisibility",
                "type": "TextBlock",
                "text": "${if(equals(action.customProperties[2].value, 'Everyone'), strings.result_everyone, strings.result_creator)}",
                "maxLines": 2,
                "wrap": true,
                "isSubtle": true,
                "size": "small",
                "spacing": "none"
            },
            {
                "id": "AnswerVisibility",
                "type": "TextBlock",
                "text": "${if(equals(action.customProperties[3].value, 'Yes'), 'Show correct answer', '')}",
                "maxLines": 2,
                "wrap": true,
                "isSubtle": true,
                "size": "small",
                "spacing": "none"
            },
            {
                "id": "Questions",
                "type": "Container",
                "style": "emphasis",
                "items": [{
                    "type": "TextBlock",
                    "text": "${count(action.dataTables[0].dataColumns)} training items",
                    "size": "medium",
                    "wrap": true,
                    "spacing": "medium"
                }]
            },
            {
                "id": "NoResponder",
                "type": "TextBlock",
                "$when": "${equals(summary.rowCreatorCount, 0)}",
                "text": "${strings.be_the_first_one_to_respond}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            },
            {
                "id": "OneResponded",
                "type": "TextBlock",
                "$when": "${equals(summary.rowCreatorCount, 1)}",
                "text": "${formatString(strings.one_responded, responders[0].displayName)}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            },
            {
                "id": "TwoResponded",
                "type": "TextBlock",
                "$when": "${equals(summary.rowCreatorCount, 2)}",
                "text": "${formatString(strings.two_responded, responders[0].displayName, responders[1].displayName)}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            },
            {
                "id": "ThreeResponded",
                "type": "TextBlock",
                "$when": "${equals(summary.rowCreatorCount, 3)}",
                "text": "${formatString(strings.three_responded, responders[0].displayName, responders[1].displayName, responders[2].displayName)}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            },
            {
                "id": "FourResponded",
                "type": "TextBlock",
                "$when": "${equals(summary.rowCreatorCount, 4)}",
                "text": "${formatString(strings.three_and_one_other_responded, responders[0].displayName, responders[1].displayName, responders[2].displayName)}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            },
            {
                "id": "MoreResponded",
                "type": "TextBlock",
                "$when": "${greater(summary.rowCreatorCount, 4)}",
                "text": "${formatString(strings.three_and_others_responded, responders[0].displayName, responders[1].displayName, responders[2].displayName, sub(summary.rowCreatorCount - 3))}",
                "size": "small",
                "weight": "bolder",
                "maxLines": 2,
                "wrap": true,
                "spacing": "small"
            }
        ],
        "actions": [{
                "id": "RespondButton",
                "$when": "${equals(action.status, 'Active')}",
                "title": "${strings.respond}",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "UpdateView"
                }
            },
            {
                "id": "ResultButton",
                "title": "${strings.view_result}",
                "command": "LaunchActionPackageView",
                "parameters": {
                    "viewName": "DetailView"
                }
            }
        ]
    },
    "data": {
        "strings": {
            "command": "GetLocalizedStrings"
        },
        "action": {
            "command": "GetAction"
        },
        "summary": {
            "command": "GetActionDataRowsSummary",
            "parameters": {
                "addDefaultAggregates": true
            }
        },
        "creator": {
            "command": "GetSubscriptionMembers",
            "parameters": {
                "memberIds": [
                    "$ActionCreator"
                ]
            }
        },
        "datarow": {
            "command": "GetActionDataRows",
            "parameters": {
                "pageSize": 3
            }
        },
        "responders": {
            "command": "GetSubscriptionMembers",
            "parameters": {
                "memberIds": [
                    "$ActionDataRowCreators"
                ]
            }
        }
    }
}